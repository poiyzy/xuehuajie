<!DOCTYPE html>
<html>
<head>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <title><%= yield(:page_title) || "雪花街" %></title>
  <%= favicon_link_tag "favicon.ico" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div id="bodyWrapper">
    <div id="flash">
      <% flash.each do |name, msg| %>
           <div class="<%= name %>">
             <%= msg %>
           </div>
         <% end %>
    </div>
     <div id="containner">
        <%= yield %>
     </div>
     <div id="footer">
       
     </div>
  </div>
</body>
</html>
