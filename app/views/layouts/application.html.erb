<!DOCTYPE html>
<html>
<head>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <title><%= yield(:page_title).empty? ? "雪花街" : yield(:page_title)  %></title>
  <%= favicon_link_tag "favicon.ico" %>
	<%=yield :head%>

  <%= csrf_meta_tags %>
</head>
<body>
  <div id="bodyWrapper">
     <div id="nav">
       <div id="brand"><a><img src="/assets/logo.jpg"/></a> </div>
        <div id="">
          <%= yield :navigation %>
        </div> 
        <div id="search">
          <input type="text" name="" value="search" />
        </div>
        <% if current_user %>
          <div id="top-account">
            <%=  user_name_link(current_user).html_safe %>
            <%= link_to "账号管理", account_users_path %>
            <%= link_to "资料", profiles_path  %>
            <%= link_to "登出", destroy_user_session_path, :method => :delete %>
          </div>
        <% end %>

     </div>
     <div id="containner">
         <% flash.each do |name, msg| %>
          <div id="flash">
           <div class="<%= name %>">
             <%= msg %>
           </div>
          </div>
         <% end %>
        <%= yield %>
     </div>
     <div id="footer">
     	<ul>
     		<li><a href="#">关于</a></li>
     		<li><a href="#">游戏</a></li>
     		<li><a href="#">手机</a></li>
     		<li><a href="#">客服帮忙</a></li>
     		<li><a href="#">隐私</a></li>
     	</ul>   
        <%= request.referer %>
     	
